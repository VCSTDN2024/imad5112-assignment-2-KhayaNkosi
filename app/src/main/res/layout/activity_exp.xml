<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image1"
    android:orientation="vertical"
    tools:context=".exp">

    <!-- Question TextView to display the question -->
    <TextView
        android:id="@+id/QuestionTxtView"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="#3FB584"
        android:textSize="30sp"
        android:text="TextView" />
    <!-- Answer TextView to show the answer -->
    <TextView
        android:id="@+id/AnswerTxtView"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#3FB584"
        android:textSize="30sp" />
    <!-- True and False buttons to answer the question -->
    <Button
        android:id="@+id/btnTrue"
        android:layout_width="380dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="40dp"
        android:textSize="20sp"
        android:backgroundTint="#4CA5AF"
        android:text="True" />

    <Button
        android:id="@+id/btnFalse"
        android:layout_width="380dp"
        android:layout_marginLeft="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#4CA5AF"
        android:textSize="20sp"
        android:text="False" />
    <!-- Next button to move to the next question -->
    <Button
        android:id="@+id/btnNext"
        android:layout_marginTop="30dp"
        android:layout_width="380dp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#4CA5AF"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Next" />


</LinearLayout>